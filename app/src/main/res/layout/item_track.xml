<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="16dp">

    <ImageView
        android:id="@+id/iv_item_track_cover"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/lilac"
        android:layout_marginVertical="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_item_track_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/track_title_desc"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/iv_item_track_cover"
        app:layout_constraintStart_toEndOf="@id/iv_item_track_cover"
        app:layout_constraintBottom_toTopOf="@id/tv_item_track_artist"
        />

    <TextView
        android:id="@+id/tv_item_track_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/track_artist_desc"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_track_title"
        app:layout_constraintStart_toStartOf="@id/tv_item_track_title"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_track_cover"
        />

    <TextView
        android:id="@+id/tv_item_track_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/duration"
        android:textColor="@color/teal_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
