<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_item_album_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/cover1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_item_album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album Title"
        android:textSize="16sp"
        android:maxLines="2"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/iv_item_album_cover"
        app:layout_constraintStart_toEndOf="@id/iv_item_album_cover"
        app:layout_constraintBottom_toTopOf="@id/tv_item_album_artist"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tv_item_album_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Featured Artists"
        android:textSize="14sp"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/tv_item_album_title"
        app:layout_constraintStart_toStartOf="@id/tv_item_album_title"
        app:layout_constraintBottom_toTopOf="@id/tv_item_album_date"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tv_item_album_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year of publishing"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_album_artist"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_album_cover"
        app:layout_constraintStart_toStartOf="@id/tv_item_album_artist"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
