<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="360dp"
        android:layout_height="360dp"
        app:srcCompat="@drawable/lilac"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_shadow"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <ImageButton
        android:id="@+id/btn_pause_play"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pause"
        android:background="@drawable/button_background"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/seek_bar"
        app:layout_constraintStart_toEndOf="@id/btn_previous"
        app:layout_constraintEnd_toStartOf="@id/btn_next"
        android:contentDescription="@string/pause_play_button"
        />

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/next"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toTopOf="@id/btn_pause_play"
        app:layout_constraintStart_toEndOf="@id/btn_pause_play"
        app:layout_constraintEnd_toStartOf="@id/btn_stop"
        android:contentDescription="@string/next_button"
        />

    <ImageButton
        android:id="@+id/btn_previous"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/previous"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toTopOf="@id/btn_pause_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_pause_play"
        android:contentDescription="@string/previous_button"
        />

    <ImageButton
        android:id="@+id/btn_stop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_stop"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toTopOf="@id/btn_pause_play"
        app:layout_constraintStart_toEndOf="@id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/stop_button"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_artist"
        app:layout_constraintStart_toStartOf="@id/iv_cover"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        tools:text="Сирени"
        app:layout_goneMarginTop="4dp"/>

    <TextView
        android:id="@+id/tv_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Мэйклав"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"/>

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:progress="0"
        app:layout_constraintTop_toBottomOf="@id/tv_artist"
        android:layout_marginVertical="16dp"
        app:layout_constraintBottom_toTopOf="@id/btn_pause_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
